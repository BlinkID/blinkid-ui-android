<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fade in -->
    <objectAnimator
        android:duration="@integer/mb_card_fade_duration"
        android:propertyName="alpha"
        android:valueFrom="0"
        android:valueTo="1.0" />

    <!-- Rotate -->
    <objectAnimator
        android:duration="@integer/mb_card_flip_duration"
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:propertyName="rotationY"
        android:startOffset="@integer/mb_card_flip_offset"
        android:valueFrom="0"
        android:valueTo="180" />

    <!-- Fade out -->
    <objectAnimator
        android:duration="@integer/mb_card_fade_duration"
        android:propertyName="alpha"
        android:startOffset="@integer/mb_card_fade_out_offset"
        android:valueFrom="1.0"
        android:valueTo="0.0" />
</set>
